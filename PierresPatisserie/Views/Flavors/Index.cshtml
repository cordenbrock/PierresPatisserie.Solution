@{
  Layout = "_Layout";
}

@using PierresPatisserie.Models;
@model IEnumerable<PierresPatisserie.Models.Flavor>;

<h1>Flavors</h1>
<hr>

@if (@Model.Any())
{
  @foreach (Flavor flavor in Model)
  {
    <p>@Html.ActionLink($"{flavor.FlavorType}", "Details", new { id = flavor.FlavorId })</p>
  }
}
else
{
  <p>No flavors have been listed yet</p>
}

<hr>

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
@{
  Layout = "_Layout";
}

@model PierresPatisserie.Models.Treat

<h2>Assign Flavor</h2>
<hr>

<h4>Add @Html.DisplayFor(model => model.TreatName) to:</h4>

@using (Html.BeginForm())
{

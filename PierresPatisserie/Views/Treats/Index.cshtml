@{
  Layout = "_Layout";
}

@using PierresPatisserie.Models;
@model IEnumerable<PierresPatisserie.Models.Treat>;

<h1>Treats</h1>
<hr>

@if (@Model.Any())
{
  @foreach (Treat treat in Model)
  {
    <p>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</p>
  }
}
else
{
  <p>No treats have been listed yet</p>
}

<hr>

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>